<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_c">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="315dp"
        android:layout_height="61dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="206dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:background="@drawable/text_view_borders"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:paddingStart="15sp"
            android:textSize="20dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="72dp"
            android:layout_height="61dp"
            android:layout_weight="1"
            android:clickable="false"
            android:enabled="false"
            android:text="Send"
            android:textSize="17dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvCompanyData"
        android:layout_width="210dp"
        android:layout_height="41dp"
        android:layout_marginTop="148dp"
        android:text="Company data"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.306"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etGotId"
        android:layout_width="313dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_view_borders"
        android:hint="Name"
        android:inputType="none"
        android:paddingStart="15sp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCompanyData" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="315dp"
        android:layout_height="57dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.708"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etGotId">

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="206dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:background="@drawable/text_view_borders"
            android:ems="10"
            android:hint="Phone number"
            android:inputType="phone"
            android:paddingStart="15sp"
            android:textSize="20dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnCall"
            android:layout_width="72dp"
            android:layout_height="61dp"
            android:layout_weight="1"
            android:clickable="false"
            android:enabled="false"
            android:text="Call"
            android:textSize="17dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="315dp"
        android:layout_height="58dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.072">

        <EditText
            android:id="@+id/etUrl"
            android:layout_width="206dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:background="@drawable/text_view_borders"
            android:ems="10"
            android:hint="Url"
            android:inputType="textUri"
            android:paddingStart="15sp"
            android:textSize="20dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnOpen"
            android:layout_width="72dp"
            android:layout_height="61dp"
            android:layout_weight="1"
            android:clickable="false"
            android:enabled="false"
            android:text="Open"
            android:textSize="17dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>