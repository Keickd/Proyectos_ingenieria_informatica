<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.usj.androidapps.alu100485.movieslibrary">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Movies Library"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoviesLibrary"
        android:usesCleartextTraffic="true">
        <activity android:name=".ViewGenre"></activity>
        <activity android:name=".ViewActor" />
        <activity android:name=".Favorites" />
        <activity android:name=".AddMovie"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".ViewMovie" />
        <activity android:name=".EditMovie"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".Contact" />
        <activity android:name=".Home" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>